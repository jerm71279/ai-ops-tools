        async function saveProjectRow(itemId, button) {
            const row = button.closest('tr');
            const cells = row.querySelectorAll('[data-field]');
            const updates = { Title: 'Project' };

            cells.forEach(cell => {
                const field = cell.getAttribute('data-field');
                const value = cell.tagName === 'SELECT' ? cell.value : cell.textContent.trim();
                updates[field] = value;
            });

            try {
                await fetch(`https://graph.microsoft.com/v1.0/sites/${siteId}/lists/${projectsListId}/items/${itemId}/fields`, {
                    method: 'PATCH',
                    headers: {
                        'Authorization': `Bearer ${accessToken}`,
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(updates)
                });
                alert('Project updated successfully!');
            } catch (error) {
                console.error('Error updating project:', error);
                alert('Failed to update project: ' + error.message);
            }
        }

