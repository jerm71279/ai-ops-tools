        // ========== COMMENTS FUNCTIONALITY ==========

        let currentCommentsItemId = null;
        let currentCommentsType = null;
        let currentCommentsItemName = '';

        async function showCommentsModal(itemId, type, itemName) {
            currentCommentsItemId = itemId;
            currentCommentsType = type;
            currentCommentsItemName = itemName;

            document.getElementById('commentsItemName').textContent = itemName;
            document.getElementById('commentsModal').classList.add('active');
            document.getElementById('newCommentText').value = '';

            await loadComments();
        }

        function closeCommentsModal() {
            document.getElementById('commentsModal').classList.remove('active');
            currentCommentsItemId = null;
            currentCommentsType = null;
        }

        async function loadComments() {
            const container = document.getElementById('commentsContainer');
            container.innerHTML = '<div style="text-align: center; color: #999; padding: 20px;">Loading comments...</div>';

            try {
                const listId = currentCommentsType === 'project' ? projectsListId : ticketsListId;
                const response = await fetch(
                    `https://graph.microsoft.com/v1.0/sites/${siteId}/lists/${listId}/items/${currentCommentsItemId}?expand=fields`,
                    {
                        headers: {
                            'Authorization': `Bearer ${accessToken}`
                        }
                    }
                );

                const item = await response.json();
                const commentsJson = item.fields.Comments || '[]';
                const comments = JSON.parse(commentsJson);

                if (comments.length === 0) {
                    container.innerHTML = '<div style="text-align: center; color: #999; padding: 20px;">No comments yet. Be the first to comment!</div>';
                    return;
                }

                // Display comments
                container.innerHTML = comments.map(comment => {
                    const timestamp = new Date(comment.timestamp);
                    const formattedTime = timestamp.toLocaleString('en-US', {
                        month: 'long',
                        day: 'numeric',
                        year: 'numeric',
                        hour: 'numeric',
                        minute: '2-digit',
                        hour12: true
                    });

                    return `
                        <div style="background: #f9fafb; padding: 15px; border-radius: 8px; margin-bottom: 15px; border-left: 4px solid #1e3a8a;">
                            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 8px;">
                                <strong style="color: #1e3a8a; font-size: 14px;">${comment.author}</strong>
                                <span style="color: #9ca3af; font-size: 12px;">${formattedTime}</span>
                            </div>
                            <div style="color: #374151; font-size: 14px; line-height: 1.5; white-space: pre-wrap;">${comment.comment}</div>
                        </div>
                    `;
                }).join('');

            } catch (error) {
                console.error('Error loading comments:', error);
                container.innerHTML = '<div style="text-align: center; color: #ef4444; padding: 20px;">Error loading comments. Please try again.</div>';
            }
        }

        async function addNewComment() {
            const commentText = document.getElementById('newCommentText').value.trim();

            if (!commentText) {
                alert('Please enter a comment before saving.');
                return;
            }

            const account = msalInstance.getActiveAccount();
            if (!account) {
                alert('You must be logged in to add comments.');
                return;
            }

            const author = account.name || account.username;

            try {
                // Get existing comments
                const listId = currentCommentsType === 'project' ? projectsListId : ticketsListId;
                const response = await fetch(
                    `https://graph.microsoft.com/v1.0/sites/${siteId}/lists/${listId}/items/${currentCommentsItemId}?expand=fields`,
                    {
                        headers: {
                            'Authorization': `Bearer ${accessToken}`
                        }
                    }
                );

                const item = await response.json();
                const commentsJson = item.fields.Comments || '[]';
                const comments = JSON.parse(commentsJson);

                // Create new comment
                const newComment = {
                    id: `${currentCommentsItemId}_${comments.length + 1}_${Date.now()}`,
                    author: author,
                    timestamp: new Date().toISOString(),
                    comment: commentText
                };

                // Add to comments array
                comments.push(newComment);

                // Update SharePoint
                const updateResponse = await fetch(
                    `https://graph.microsoft.com/v1.0/sites/${siteId}/lists/${listId}/items/${currentCommentsItemId}/fields`,
                    {
                        method: 'PATCH',
                        headers: {
                            'Authorization': `Bearer ${accessToken}`,
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            Comments: JSON.stringify(comments)
                        })
                    }
                );

                if (updateResponse.ok) {
                    // Clear the textarea
                    document.getElementById('newCommentText').value = '';

                    // Reload comments
                    await loadComments();

                    alert('‚úÖ Comment added successfully!');
                } else {
                    throw new Error('Failed to save comment');
                }

            } catch (error) {
                console.error('Error adding comment:', error);
                alert('‚ùå Failed to add comment. Please try again.');
            }
        }
