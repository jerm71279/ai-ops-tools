# =============================================================================
# OberaConnect Notion Dashboards - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Notion Integration (Required)
# -----------------------------------------------------------------------------
# Get your token from: https://www.notion.so/my-integrations
NOTION_TOKEN=secret_YOUR_NOTION_INTEGRATION_TOKEN

# -----------------------------------------------------------------------------
# UniFi Site Manager (Required for site sync)
# -----------------------------------------------------------------------------
# Get from UniFi Site Manager API settings
UNIFI_API_TOKEN=your_unifi_api_token_here

# -----------------------------------------------------------------------------
# NinjaOne RMM (Required for device/alert sync)
# -----------------------------------------------------------------------------
# OAuth credentials from NinjaOne Admin > API
NINJAONE_CLIENT_ID=your_client_id_here
NINJAONE_CLIENT_SECRET=your_client_secret_here

# -----------------------------------------------------------------------------
# Azure Key Vault (Optional - Production Recommended)
# -----------------------------------------------------------------------------
# When set, credentials are fetched from Key Vault instead of env vars
# Requires: pip install azure-identity azure-keyvault-secrets
# AZURE_KEY_VAULT_URL=https://your-vault.vault.azure.net/

# -----------------------------------------------------------------------------
# Email Notifications (Optional)
# -----------------------------------------------------------------------------
# For sending alert emails (SMTP)
# SMTP_HOST=smtp.office365.com
# SMTP_PORT=587
# SMTP_USER=alerts@oberaconnect.com
# SMTP_PASSWORD=your_smtp_password
# ALERT_FROM_EMAIL=alerts@oberaconnect.com
# ALERT_TO_EMAIL=support@oberaconnect.com

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
# Set to true for JSON format (recommended for production)
LOG_JSON_FORMAT=false
# Optional: Path for audit log file
# AUDIT_LOG_FILE=/var/log/oberaconnect/audit.log

# -----------------------------------------------------------------------------
# Sync Settings
# -----------------------------------------------------------------------------
# Rate limit for Notion API (requests per second)
NOTION_RATE_LIMIT=3
# Batch size for bulk operations
SYNC_BATCH_SIZE=50
