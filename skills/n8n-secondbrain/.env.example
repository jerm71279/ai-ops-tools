# =============================================================================
# OberaConnect Secondbrain - Environment Configuration (SECURED)
# =============================================================================
# SECURITY: Copy to .env and fill in values. NEVER commit .env to git!
# =============================================================================

# -----------------------------------------------------------------------------
# n8n Configuration (REQUIRED)
# -----------------------------------------------------------------------------

# Basic auth - use strong passwords (min 16 chars)
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=CHANGE_TO_STRONG_PASSWORD_MIN_16_CHARS

# Encryption key - generate with: openssl rand -hex 16
N8N_ENCRYPTION_KEY=GENERATE_WITH_OPENSSL_RAND_HEX_16

# External URL (your VM public IP or domain with HTTPS)
WEBHOOK_URL=https://your-domain.com
N8N_HOST=your-domain.com

# Timezone
TIMEZONE=America/Chicago

# -----------------------------------------------------------------------------
# Qdrant Security (REQUIRED)
# -----------------------------------------------------------------------------

# API Key - generate with: openssl rand -hex 32
QDRANT_API_KEY=GENERATE_WITH_OPENSSL_RAND_HEX_32

# Read-only API key for query-only access (optional)
QDRANT_READ_ONLY_API_KEY=

# Collection name
QDRANT_COLLECTION=oberaconnect-docs

# -----------------------------------------------------------------------------
# Webhook API Security (REQUIRED)
# -----------------------------------------------------------------------------

# API key for webhook authentication - generate with: openssl rand -hex 24
SECONDBRAIN_API_KEY=GENERATE_WITH_OPENSSL_RAND_HEX_24

# -----------------------------------------------------------------------------
# Anthropic (Claude) API (REQUIRED)
# -----------------------------------------------------------------------------

# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-XXXXXXXXXXXXXXXX

# -----------------------------------------------------------------------------
# Microsoft 365 / SharePoint (REQUIRED for ingestion)
# -----------------------------------------------------------------------------

# Azure AD App Registration
# Create at: https://portal.azure.com/#blade/Microsoft_AAD_RegisteredApps
# Required permissions: Sites.Read.All, Files.Read.All
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_TENANT_ID=

# SharePoint Site - Get via Graph Explorer
SHAREPOINT_SITE_ID=
SHAREPOINT_DRIVE_ID=
SHAREPOINT_FOLDER_PATH=/Shared Documents/Knowledge Base

# -----------------------------------------------------------------------------
# Optional Integrations
# -----------------------------------------------------------------------------

# Teams webhook for notifications
TEAMS_WEBHOOK_URL=

# Google Drive for Obsidian sync
GOOGLE_DRIVE_FOLDER_ID=

# -----------------------------------------------------------------------------
# Performance Tuning
# -----------------------------------------------------------------------------

MAX_FILE_SIZE_MB=50
CHUNK_SIZE=500
CHUNK_OVERLAP=50
ANTHROPIC_RATE_LIMIT_RPM=50
LOG_LEVEL=info
